<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="372dp" />

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/number_phone"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_android_studio"
        app:layout_constraintBottom_toTopOf="@id/guidLine1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_phone"
        android:layout_width="40sp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/ic_action_phone_start"
        app:layout_constraintStart_toStartOf="@id/iv_1"
        app:layout_constraintTop_toBottomOf="@id/guidLine1" />

    <TextView
        android:id="@+id/tv_number_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:text="@string/number_phone"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/btn_phone"
        app:layout_constraintTop_toTopOf="@+id/btn_phone" />

    <Button
        android:id="@+id/btn_sms"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:background="@drawable/ic_action_sms"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_number_phone"
        app:layout_constraintTop_toTopOf="@+id/tv_number_phone" />

    <TextView
        android:id="@+id/tv_number_phone1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_phone1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_number_phone"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="@+id/tv_number_phone"
        app:layout_constraintTop_toBottomOf="@+id/tv_number_phone" />
    <Button
        android:id="@+id/btn_sms1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toEndOf="@id/tv_number_phone1"
        app:layout_constraintStart_toStartOf="@+id/btn_sms"
        app:layout_constraintTop_toTopOf="@+id/tv_number_phone1"
        app:layout_constraintEnd_toEndOf="@+id/btn_sms"
        android:background="@drawable/ic_action_sms"/>
    <View
    android:id="@+id/vew"
    android:layout_width="0dp"
    android:layout_height="3dp"
    app:layout_constraintStart_toStartOf="@+id/tv_number_phone1"
    app:layout_constraintTop_toBottomOf="@id/tv_number_phone1"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="32dp"
    android:background="@color/colorLine">
    </View>

    <Button
        android:id="@+id/btn_mail"
        android:layout_width="40sp"
        android:layout_height="40dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/ic_action_mail"
        app:layout_constraintStart_toStartOf="@id/btn_phone"
        app:layout_constraintTop_toBottomOf="@id/btn_phone" />
    <TextView
        android:id="@+id/tv_address_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_number_phone"
        app:layout_constraintStart_toStartOf="@+id/tv_number_phone1"
        app:layout_constraintTop_toTopOf="@id/btn_mail" />

    <ImageView
        android:id="@+id/ic_new"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:src="@drawable/favourites_30824"
        app:layout_constraintBottom_toTopOf="@+id/guidLine1"
        app:layout_constraintStart_toStartOf="@id/btn_sms"
        app:layout_constraintTop_toTopOf="@+id/guidLine1"
        app:layout_constraintEnd_toEndOf="@id/btn_sms" />


</androidx.constraintlayout.widget.ConstraintLayout>